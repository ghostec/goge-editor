{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "src/components/*", "src/containers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*/test.js"]
}
